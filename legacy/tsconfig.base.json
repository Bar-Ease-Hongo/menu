{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@bar-ease/core": ["packages/core/src/index.ts"],
      "@bar-ease/core/*": ["packages/core/src/*"],
      "@bar-ease/common": ["packages/common/src/index.ts"],
      "@bar-ease/common/*": ["packages/common/src/*"],
      "@bar-ease/menu/*": ["services/lambda/menu/*"],
      "@bar-ease/recommend/*": ["services/lambda/recommend/*"]
    }
  }
}
